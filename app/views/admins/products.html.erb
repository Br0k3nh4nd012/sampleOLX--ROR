<div style="margin-left:-15px"><%= link_to 'Back', root_path %></div>
<h1>Products </h1>

<table class="table" style="background-color:azure">
  <thead class="thead-dark"> 
    <tr>
        <th scope="col">Product id</th>
        <th scope="col">Name</th>
        <th scope="col">Catergory</th>
        <th scope="col">Description</th>
        <th scope="col">price</th>
        <th scope="col">Posted by</th>
        <th scope="col">Posted at</th>
        <th scope="col">Sold Out</th>
        <th scope="col">Bought by</th>
        
        <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
        <tr>
            <td><%= product.id %></td>
            <td><%= link_to product.name%></td>
            <td><%= product.category %></td>
            <td><%= product.description %></td>
            <td><%= product.price %></td>  
            <td><%= link_to product.user.name , view_profile_path(product.user)%></td>  
            <td><%= product.updated_at %></td>  
            <% if product.soldOut %>
                <td>Yes</td>    
            <% else %>   
                <td>No</td>  
            <% end %>
            <% if product.payment %>
              <td><%= link_to product.payment.user.name , view_profile_path(product.payment.user)%></td>  
            <% else %>
              <td></td>
            <% end %>
            <td><%= link_to 'Edit', edit_product_path(product) , class:"editbtn" %></td>
            <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } , class:"destroybtn"%></td> 
            
        </tr>
      
    <% end %>
  </tbody>
</table>