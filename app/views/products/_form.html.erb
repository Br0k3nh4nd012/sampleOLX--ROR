<%= form_with(model: product) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  


  <div class="field" style="width:400px">
    <%= form.label :name %>
    <%= form.text_field :name ,  class:"form-control"%>
  </div>
  <div class="field" style="width:400px">
      <%= form.label :brand %>
      <%= form.select :brand, options_for_select(["select..","samsung", "rolex", "apple", "philips", "yamaha", "toyota", "oneplus", "audi", "x-publications", "whirlpool", "others"],()) ,{},{ class:"form-control" } %>
    </div>

  <%= render partial: 'categoryView' , category: @category ,locals: { form: form } %>

  <div class="field" style="width:400px">
    <%= form.label :description %>
    <%= form.text_area :description ,  class:"form-control"%>
  </div>

  <div class="field" style="width:400px">
    <%= form.label :price %>
    <%= form.number_field :price ,  class:"form-control" %>
  </div>
  <div style="display:flex; margin-top:40px">
  <div class="actions" style="margin:auto 10px">
    <%= form.submit "Create Product", class:"btn btn-success " %>
  </div>
  <div><%= link_to "Cancel" , root_path, class:"btn btn-light"%></div>
  </div>
<% end %>
