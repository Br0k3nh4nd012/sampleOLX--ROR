
<div style="margin-left:-15px"><%= link_to 'Back', products_path %></div>

<div class="showProduct"> 
<div class="myCard">
  <%= image_tag "for_sale.jpg" , class:"image-lg"%>
  <% if @product.payment %>
  <button class="btn btn-danger buy">Sold Out</button>
  <% else %>
    <% if @product.user==current_user %>
    <h5>Its your Product</h5>
    <% else %>
  <%= link_to 'Buy Now', new_product_payment_path(@product) , class:"btn btn-success a-btn buy" %> <br>
  <% end %>
  <% end %>
</div>
<br>
<div class="myCard">
  <h5><strong>Details of product</strong></h5>
  <% if @valid  %>
  <%= link_to "update Details" , edit_product_path(@product) , class:"btn btn-success a-btn" %>
  <% end %>
</div>
<p style="font-size:20px">
  <strong>Name:</strong>
  <%= @product.name %>
</p>

<p style="font-size:20px">
  <strong>Related Categories:</strong>
  <% @product.categories.each do |category| %>
    <%= category.category%>,
    <% end %>
</p>

<p style="font-size:20px">
  <strong>Description:</strong>
  <%= @product.description %>
</p>

<p style="font-size:20px">
  <strong>Price:</strong>
  <%= number_with_delimiter(@product.price) %>
</p>

<p style="font-size:20px">
  <strong>Posted By:</strong>
  <%= link_to @product.user.name , profile_path(@product.user) %>
</p>
<p style="font-size:20px">
  <strong>Posted At:</strong>
  <%= @product.updated_at %>
</p>
<hr />
<div class="myCard">
  <h5><strong>Location of Product</strong></h5>
    <% if @valid %>
      <% if @product.location %>
        <%= link_to "update location" ,edit_product_location_path(@product), class:"btn btn-success btnwhite" %>
      <% else %>
        <%= link_to "update location" ,new_product_location_path(@product), class:"btn btn-success btnwhite" %>
      <% end %>
    <% end %>
  </div>
<br>
<% if @product.location %>
  <p style="font-size:20px">
    <strong>City:</strong>
    <%= @product.location_city %>
  </p>
  <p style="font-size:20px">
    <strong>State:</strong>
    <%= @product.location_state %>
  </p>
  <p style="font-size:20px">
    <strong>Country:</strong>
    <%= @product.location_country %>
  </p>
  <p style="font-size:20px">
    <strong>Postal Code:</strong>
    <%= @product.location.postalCode %>
  </p>
  <% else %>
    <p style="color:red">Location not yet mentioned</p>
  <% end %>
</div>
<% if current_user != @product.user%>
  
<% end %>


