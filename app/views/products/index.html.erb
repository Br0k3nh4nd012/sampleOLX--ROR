

  <% if current_user.name==nil || current_user.mobNumber==nil  %>
  <h4 class="profileAlert">Please set up your profile for a better experience<%= link_to "Update Profile" , edit_profile_path(current_user) , class:"btn btn-light" %></h4>
<%end%>
  <h3>Products</h3>
  <%= render 'filterForm' %>
  <div style="float:right"><%= link_to 'New Product', new_product_path , class:"btn btn-success a-btn"%></div>
<% @products.each do |product| %>
  <% if !product.soldOut %>
  <div class="card w-50">
    <div class="card-body">
      <div class="myCard">
        <div>
          <h5 class="card-title"><strong><%=product.name%></strong></h5>
          <h6 class="card-text"><strong>id: </strong> <%=product.id%></h6>
          <h6 class="card-text"><strong>category: </strong> <%=product.category%></h6>
          <h6 class="card-text"><strong>Price: </strong> <%=product.price%></h6>
          <%if product.location%>
              <h6 class="card-text"><strong>Location: </strong> <%=product.location.city%></h6>
            <%else%>
              <%= %>              
            <% end %>
          
          <br>
          <%= link_to 'show more' , product ,class:"btn btn-info a-btn" %>
        </div>
        <div>
        <%= image_tag "for_sale.jpg" , class:"image"%>
        </div>
      </div>
    </div>
  </div>
  <br>
  <% end %>
<% end %>



