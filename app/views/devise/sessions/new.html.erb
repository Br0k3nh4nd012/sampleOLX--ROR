<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field" style="width:30%">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true ,placeholder:"enter email" ,autocomplete: "email" , class:"form-control"%>
  </div>

  <div class="field" style="width:30%">
    <%= f.label :password %><br />
    <%= f.password_field :password,placeholder:"enter email",autocomplete: "current-password" , class:"form-control"%>
  </div>

  

  <div class="actions" style="margin-top:40px">
    <%= f.submit "Log in" , class:"btn btn-light"%>
  </div>
<% end %>

<%= render "devise/shared/links" %>
