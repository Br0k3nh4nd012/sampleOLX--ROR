<h2>Location</h2>
<p>(place where the product is located)</p>
<%= form_with(model: @location , url: add_location_path) do |form| %>
  <% if @location.errors.any? %>
  <ul>
  <% @location.errors.full_messages.each do |message| %>
    <li><%= message %></li>
  <% end %>
  </ul>
<% end %>


  <div class="field" style="width:30%">
    <%= form.label :city %>
    <%= form.text_field :city ,  class:"form-control" %>
  </div>
  <div class="field" style="width:30%">
    <%= form.label :state %>
    <%= form.text_field :state ,  class:"form-control" %>
  </div>
  <div class="field" style="width:30%">
    <%= form.label :country %>
    <%= form.text_field :country ,  class:"form-control" %>
  </div>
  <div class="field" style="width:30%">
    <%= form.label :postalCode %>
    <%= form.number_field :postalCode ,  class:"form-control" %>
  </div>
  <div class="actions" style="margin-top:40px">
    <%= form.submit "Set Location", class:"btn btn-success " %>
  </div>
  
    <% end %>