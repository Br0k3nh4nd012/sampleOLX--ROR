<!DOCTYPE html>
<html>
  <head>
    <title>Olxproject</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    
  </head>

  <body>
      <% if notice %>
      <div class="notice alert alert-success alert-dismissible fade show" role="alert">
           <%= notice %>
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
      <% end %>
        
      <% if alert %>
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
          <strong>Alert: </strong> <%= alert %>
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
      <% end %>
      <%if current_user %>
        <nav class="navbarMine">
          <div style="display:flex">
            <h3 style="padding:10px">Olx</h3>
            <%= link_to "Home" , root_path , class:"signOutText"%>
            <% if current_user.isAdmin %>
              <%= link_to "Users" , ad_users_path , class:"signOutText"%>
              <%= link_to "Products" , ad_products_path , class:"signOutText"%>
              <%= link_to "Payments" , ad_payments_path , class:"signOutText"%>
            <% end %>
          </div>
          <div style="display:flex">
            <h5 style="padding:15px"><%=current_user.name%></h5>
            <%= link_to "profile" , view_profile_path(current_user) , class:"signOutText"%>
            <%= link_to "Sign out" , destroy_user_session_path , method: :delete , class:"signOutText"%>
          </div>
        </nav>

      <%end%>
      <div class="mainBody">
        <%= yield %>
        </div>
      

    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
  </body>
</html>
