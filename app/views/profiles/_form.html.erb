<%= form_with url: '/profile/edit/' , model:profile do |form| %>
    <% if profile.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(profile.errors.count, "error") %> prohibited this product from being saved:</h2>
  
        <ul>
          <% profile.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="field" style="width:30%">
      <%= form.label :name %>
      <%= form.text_field :name ,  class:"form-control"%>
    </div>
    <div class="field" style="width:30%">
      <%= form.label :email%>
      <%= form.text_field :email ,  class:"form-control"%>
    </div>
    <div class="field" style="width:30%">
      <%= form.label :mobNumber , "Mobile Number"%>
      <%= form.text_field :mobNumber ,  class:"form-control"%>
    </div>
    <div class="field" style="width:30%">
      <%= form.label :address %>
      <%= form.text_area :address ,  class:"form-control"%>
    </div>

    <div class="actions" style="margin-top:40px">
      <%= form.submit "Update Profile",class:"btn btn-success "%>
    </div>
  <% end %>
